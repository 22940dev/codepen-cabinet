*
  box-sizing border-box
  animation  fadeIn .5s

body
  background-color #111
  color            #fafafa
  height           100vh
  width            100vw
  margin           0
  padding          0

canvas
  height           250px
  width            250px
  position         absolute
  top              50%
  left             50%
  margin-left      -125px
  margin-top       -125px
  animation        pulse 30s infinite ease

@keyframes pulse
  0%, 100%
    transform rotate(45deg) scale(.5)
  50%
    transform rotate(45deg) scale(1)

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

.controls
  label
    display block
    margin-bottom 5px
  position absolute
  padding 20px
  bottom 10px
  left 10px
