*
  box-sizing border-box
  --padding initial
  padding var(--padding)

h1
  text-align center
  color #fff

body
  background #111
  --padding 50px
  display flex
  flex-direction column
  align-items stretch

.rainbow-buttons
  display flex
  flex 1
  flex-direction row
  justify-content space-around
  align-items center
  flex-wrap wrap

button
  --col var(--color, #2eec71)
  width 100px
  outline 0
  --padding 8px 10px
  border-color var(--col)
  border-width 4px
  border-radius 4px
  color var(--col)
  background transparent
  cursor pointer

  &.custom
    --padding 16px 20px
    font-size  24px
    width auto
    align-self center

  &:hover
    background var(--col)
    color #ffffff

input
  padding 10px 16px
  border-radius 4px
  text-align center
  width 250px
  align-self center
  margin 10px
