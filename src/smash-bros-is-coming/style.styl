*
  box-sizing border-box

body
  background-color #111
  text-align       center
  height 100vh
  width 100vw
  margin 0
  padding 0
  display flex
  align-items center
  justify-content center

.container
  border-radius 100%
  height 25vh
  width 25vh
  position relative
  overflow hidden
  animation pop .25s 5.05s

  div
    height 100%
    width  100%
    background-color white
    position absolute

    &:nth-of-type(1)
      bottom 40%
      right 80%

    &:nth-of-type(2)
      bottom 40%
      left 40%

    &:nth-of-type(3)
      top 70%
      right 80%

    &:nth-of-type(4)
      top 70%
      left 40%

.backdrop
  height 100vh
  width 100vw
  background linear-gradient(30deg, red, blue)
  position absolute
  opacity .25

.reveal
  height 100vh
  width 100vw
  background linear-gradient(60deg, rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.95) 42%, rgba(0, 0, 0, 0.75) 49%, rgba(0, 0, 0, 0.65) 51%, rgba(0, 0, 0, 0.95) 57%)
  position absolute
  opacity 1
  background-size 300% 100%
  animation reveal 5s ease 0s
  animation-fill-mode forwards

@keyframes pop
  0%, 100%
    transform scale(1)
  50%
    transform scale(1.15)

@keyframes reveal
  0%
    background-position -300% 0
  75%
    background-position 100% 0
    opacity 1
  100%
    background-position 100% 0
    opacity 0