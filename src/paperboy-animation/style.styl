

$size = 160px
$tubeWidth = 10px

$wheelSize = $size
$tyreWidth = $wheelSize / 8
$rimWidth  = $wheelSize / 10
$hubSize = 25%

$scale = 1


:root
  --frame red
  --seat black
  --handlebars red
  --forks red
  --stem black
  --mags grey
  --sprocket silver
  --pedals silver
  --tyres black
  --cranks black


.wheel
  height $wheelSize
  width $wheelSize
  position relative
  overflow hidden

  &__tyre
    border $tyreWidth solid var(--tyres)
    border-radius 100%
    height 100%
    width 100%
    z-index 3
    overflow hidden
    position absolute
    top 0
    left 0

  &__spin
    height 100%
    width 100%
    border-radius 100%
    overflow hidden
    position relative
    animation spin .5s infinite linear

  &__rim
    border $rimWidth solid var(--mags)
    border-radius 100%
    height ($size - $tyreWidth)
    width ($size - $tyreWidth)
    overflow hidden
    position absolute
    top 50%
    left 50%
    z-index 1
    transform translate(-50%, -50%)

  &__hub
    height $hubSize
    width $hubSize
    background var(--mags)
    border-radius 100%
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)

  &__spokes
    height 97%
    width 100%
    position absolute
    top 0
    left 0
    overflow hidden

  &__spoke
    position absolute
    top 50%
    left 50%
    height 50%
    width 10%
    background var(--mags)
    transform-origin top center
    for $spoke in (1..5)
      &:nth-of-type({$spoke})
        transform translate(-50%, 0%) rotate(($spoke * 72deg))



// Animations
@keyframes spin
  to
    transform rotate(360deg)

$frameSize = $size
$bbSize = $frameSize * 0.25
$chainStayLength = $frameSize * 0.65
$seattubeLength = $frameSize * 0.5

.frame
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  height $bbSize
  width $bbSize

  &__tube
    background var(--frame)
    position absolute
    height $tubeWidth

  &__toptube
    width $frameSize
    transform rotate(-14deg) translate(-5%, -825%)
    left 50%

    &:after
      content ''
      display block
      position absolute
      background var(--frame)
      width ($tubeWidth * 1.2)
      height ($tubeWidth * 4)
      top -($tubeWidth * 0.5)
      right -($tubeWidth * 0.1)

  &__chainstay
    width $chainStayLength
    top 50%
    transform translate(-90%, -50%)

  &__bottombracket
    height ($bbSize * 0.75)
    width ($bbSize * 0.75)
    border-radius 100%
    top 50%
    left 50%
    transform translate(-50%, -50%)

  &__seatstay
    transform-origin left center
    top 50%
    transform translate(-($chainStayLength), -50%) rotate(-38deg)
    width $chainStayLength * 1.2

  &__dropout
    top 50%
    transform translate(-($chainStayLength) + 5%, -50%)
    height ($tubeWidth * 2)
    width ($tubeWidth * 2)
    border-radius 100%

  &__downtube
    width $frameSize
    left 50%
    top 50%
    transform-origin left center
    transform translate(0, -50%) rotate(-36deg)

  &__seattube
    width $seattubeLength
    transform-origin left center
    left 50%
    transform rotate(-109deg) translate(0%, -50%)


.forks
  position absolute
  height ($tubeWidth * 2)
  width ($tubeWidth * 2)

  &__steerer
    height ($tubeWidth * 5)
    width $tubeWidth
    background var(--forks)
    position absolute
    bottom ($tubeWidth * 9)

  &__leg
    background var(--forks)
    width $tubeWidth
    height ($tubeWidth * 9)
    transform-origin top center
    transform rotate(1deg) translateY(-1%)
    position absolute
    bottom 0

  &__dropout
    position absolute
    bottom 0
    left 0
    height ($tubeWidth * 2)
    width ($tubeWidth * 2)
    background var(--forks)
    border-radius 100%


$sprocketSize = $size * 0.25
.bike
  position absolute
  top 50%
  left 50%
  height 200px
  width 200px
  transform translate(-60%, -50%) scale(0.65)

  @media(min-width 768px)
    transform translate(-60%, -50%) scale(1)

  &__cranks
    position absolute
    top 50%
    left 50%
    margin-left -($sprocketSize / 2)
    margin-top -($sprocketSize / 2)
    background var(--sprocket)
    height $sprocketSize
    width $sprocketSize
    border-radius 100%
    animation spin 1s infinite linear

    &--foreground .bike__crank
      transform-origin top center
      transform translate(-50%, 5%) rotate(-180deg)

  &__crank
    height ($sprocketSize * 1.25)
    width ($sprocketSize * 0.25)
    background var(--cranks)
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -5%)
    border-radius 30% 30% 50% 50%

    &:after
      border-radius 100%
      content ''
      height ($sprocketSize * 0.2)
      width ($sprocketSize * 0.2)
      background var(--frame)
      top 100%
      left 50%
      position absolute
      transform translate(-50%, -110%)

    &:before
      content ''
      height 20%
      width 300%
      background #404040
      position absolute
      top 100%
      left 50%
      margin-left -150%
      margin-top -100%
      animation spin 1s infinite reverse linear


  &__seat
    background var(--seat)
    position absolute
    height $size * 0.1
    width $size * 0.45
    border-radius 90%
    top 50%
    left 50%
    transform translate(-95%, -650%) rotate(-20deg)

    &:after
      content ''
      background var(--seat)
      height 120%
      width 55%
      position absolute
      border-radius 100%

