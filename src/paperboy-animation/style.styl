  &__stem
    background var(--stem)
    position absolute
    top 50%
    left 50%
    height ($tubeWidth * 1.5)
    width ($tubeWidth * 3)
    transform translate(380%, -900%) rotate(-12deg)

  &__handlebars
    background var(--handlebars)
    width $tubeWidth
    height ($tubeWidth * 9)
    border-radius 0 $tubeWidth $tubeWidth
    position absolute
    top 50%
    left 50%
    transform translate(1250%, -240%) rotate(-8deg)
    &:after
      content ''
      height $tubeWidth * 1.25
      width $tubeWidth * 2
      background black
      position absolute
      border-radius $tubeWidth
      transform-origin right center
      transform translateX(-55%) rotate(10deg)


.wheel
  position absolute
  top 50%
  left 50%

  &--back
    transform translate(-125%, -50%)

  &--front
    transform translate(50%, -50%)

.forks
  position absolute
  top 50%
  left 50%
  transform translate(750%, -50%) rotate(-15deg)


.colorways
  position absolute
  top 100%
  left 50%
  transform translate(-39%, 0)
  width 300px


  &__choice
    cursor pointer
    height 44px
    width 44px
    border 0
    border-radius 100%
    margin 4px
    box-shadow 1px 1px 1px black
    transition box-shadow .05s ease

    &:hover
      box-shadow 2px 2px 2px black

    &:active
      box-shadow 0px 0px 2px black

    &--default
      background linear-gradient(45deg, #000000 33%, #ff0000 33%, #ff0000 66%, #808080 66%)
    &--skyline
      background linear-gradient(45deg, #000000 33%, #3af4f8 33%, #3af4f8 66%, #ffffff 66%)
    &--badbarbie
      background linear-gradient(45deg, #000000 33%, #ff00ec 33%, #ff00ec 66%, #000000 66%)
    &--lemonandlime
      background linear-gradient(45deg, #ffffff 33%, #00f900 33%, #00f900 66%, #fffb00 66%)
    &--stealth
      background linear-gradient(45deg, #6e6e6e 33%, #000000 33%, #000000 66%, #c0c0c0 66%)

.bike__handlebars
.bike__seat
.bike__frame
.bike__stem
.bike__forks
.bike__wheel
.bike__cranks
.bike__tyres
.bike__crank
  cursor pointer

*, *:after, *:before
  box-sizing border-box
  transition background .25s ease 0s

body
  background radial-gradient(dodgerblue, #111)
  display flex
  align-items center
  justify-content center
  height 100vh
  width 100vw

input
  visibility hidden

.instruction
  position absolute
  bottom 6px
  color white
  font-family 'Arial', sans-serif
  font-size 14px
  @media(max-width 768px)
    display none