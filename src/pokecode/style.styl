*
  box-sizing border-box
  animation  fadeIn .5s

body
  background-color #111
  color            #fefefe
  text-align       center

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

.creature
  height 150px
  width  100px
  position absolute
  top 50%
  left 50%
  margin-left -50px
  margin-top -75px
  background-color purple

.ball
  animation toss-v 1s
  animation-fill-mode forwards

  &__wrapper
    height 50px
    width  50px
    border-radius 50px
    transform rotate(0deg)
    position absolute
    top 50%
    left 50%
    margin-top -25px
    margin-left -25px
    animation toss-h 1s
    animation-fill-mode forwards

  &__top
  &__bottom
    position relative
    height 50%
    width  100%
    background-color red
    border-bottom 2px solid #000

  &__bottom
    &:before
      content ''
      height 10px
      width 10px
      border-radius 10px
      background-color grey
      position absolute
      top 0
      left 0
      margin-left -5px
      margin-top -10px
      border 4px solid black
    border-bottom none
    border-top 2px solid #000
    background-color grey


@keyframes toss-v
  0%
    transform translateY(100vh)
  45%
    transform translateY(-25vh)
  75%
    transform translateY(0)
  100%
    transform translateY(-20vw)

@keyframes toss-h
  0%
    transform translateX(-100vw)
  75%
    transform translateX(0)
  100%
    transform translateX(20vw)
