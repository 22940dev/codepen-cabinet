@import url('https://fonts.googleapis.com/css?family=Lato:300,900')

*
  box-sizing border-box
  animation  fadeIn .5s

html
body
  font-size 10px

body
  align-items      center
  background-color #ecf0f1
  color            #6c7a89
  display          flex
  font-family      'Lato', sans-serif
  flex-direction    column
  height           100vh
  justify-content  center
  margin           0
  overflow          hidden
  padding          0
  text-align       center
  width            100vw

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

.flicks
  font-size 4rem
  font-weight 900

.title
  font-weight 300
  margin 0

button
  border 0
  border-radius 10px
  color #6c7a89
  cursor pointer
  font-size 1.125rem
  padding 4px 12px

  &:hover
    background-color darken(#fff, 10%)

  &:active
    background-color darken(#fff, 20%)
    color #fff


@media(min-width 768px)
  html
  body
    font-size 24px