*
  box-sizing border-box

random(ceiling)
  return floor(math(1, 'random')*ceiling)

body
  align-items      center
  background-color #e74c3c
  display          flex
  height           100vh
  justify-content  center
  margin           0
  padding          0
  width            100vw

.track
  height 10px
  width  10px
  background-color black
  transform-style preserve-3d

.circle
  position absolute
  height 100vh
  width 100vh
  border-radius 50%
  top 50%
  left 50%
  margin-left -50vh
  margin-top -50vh
  transform-origin 100vw 20vh

for $circle in (1..25)
  .circle:nth-child({$circle})
    animation scale 5s infinite linear
    animation-delay $circle * .25s

.circle:nth-child(odd)
  background-color red

.circle:nth-child(even)
  background-color blue


@keyframes scale
  from
    transform translate3d(0, 0, 0) scale(0)
  to
    transform translate3d(0, 0, -20px) scale(4)