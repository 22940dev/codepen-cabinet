  .texts
  .ranges
    display grid
    grid-gap calc(var(--margin) * 4px)
    width 30vmin

  .input
    align-items center
    display grid
    grid-template-columns auto 1fr
    grid-gap 1rem

  // Label highlights for accentuating focus
  .input:focus-within label
    font-weight bold

  .input:nth-of-type(1)
    --highlight 'hsl(%s, %s, %s)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) + 20) * 1%))

  .input:nth-of-type(2)
    --highlight 'hsl(%s, %s, %s)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) - 20) * 1%))

  .input:nth-of-type(3)
    &:focus-within label
      color 'hsl(%s, %s, %s)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) + 20) * 1%))
    --highlight transparent

  .ranges .input
    &:nth-of-type(1)
      --track-intensity 0

    &:nth-of-type(2)
      input[type=range]::-webkit-slider-thumb:active
        --dark 'hsl(%s, %s, %s, 1)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) - 20) * 1%))
        background var(--dark)
      input[type=range]::-moz-range-thumb:active
        --dark 'hsl(%s, %s, %s, 1)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) - 20) * 1%))
        background var(--dark)
      input[type=range]::-ms-thumb:active
        --dark 'hsl(%s, %s, %s, 1)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) - 20) * 1%))
        background var(--dark)

    &:nth-of-type(3)
      &:focus-within input[type=range]::-webkit-slider-thumb
        --dot-alpha 0.25
      input[type=range]::-webkit-slider-thumb
        --thumb-border 0
        --dot-alpha 0
        --dot-color 'hsl(%s, %s, %s, %s)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) + 40) * 1%) var(--dot-alpha))
        background 'radial-gradient(circle at 50% 50%, %s 25%, transparent 25%), linear-gradient(%s, %s, %s), %s' % (var(--dot-color) calc(var(--thumb-angle) * 1deg) var(--light) var(--dark) var(--default))
        &:focus
          --dot-alpha 0.25
        &:hover
          --dot-alpha 0.5
        &:active
          --dot-alpha 1
          --thumb-angle -45

      input[type=range]::-moz-range-thumb
        --thumb-border 0
        --dot-alpha 0
        --dot-color 'hsl(%s, %s, %s, %s)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) + 40) * 1%) var(--dot-alpha))
        background 'radial-gradient(circle at 50% 50%, %s 25%, transparent 25%), linear-gradient(%s, %s, %s), %s' % (var(--dot-color) calc(var(--thumb-angle) * 1deg) var(--light) var(--dark) var(--default))
        &:focus
          --dot-alpha 0.25
        &:hover
          --dot-alpha 0.5
        &:active
          --dot-alpha 1
          --thumb-angle -45

      input[type=range]::-ms-thumb
        --thumb-border 0
        --dot-alpha 0
        --dot-color 'hsl(%s, %s, %s, %s)' % (var(--hue) calc(var(--saturation) * 1%) calc((var(--lightness) + 40) * 1%) var(--dot-alpha))
        background 'radial-gradient(circle at 50% 50%, %s 25%, transparent 25%), linear-gradient(%s, %s, %s), %s' % (var(--dot-color) calc(var(--thumb-angle) * 1deg) var(--light) var(--dark) var(--default))
        &:focus
          --dot-alpha 0.25
        &:hover
          --dot-alpha 0.5
        &:active
          --dot-alpha 1
          --thumb-angle -45