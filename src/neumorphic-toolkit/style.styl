      %s %s %s %s' % (var(--x) var(--y) var(--blur) var(--dark) var(--x2) var(--y2) var(--blur) var(--light))
    position absolute
    top 50%
    height 44px
    width 44px
    background var(--default)
    border-radius 50%
    font-size 0


    &:visited path
    path
      fill var(--dark)

    &:hover path
    &:focus path
      fill var(--light)

    &:active
        border 4px solid white
        path
          fill white

    &:not([href])
      border 0
      cursor not-allowed
      path
        fill var(--dark)

    &:nth-of-type(1)
      left 100%
      transform translate(50%, -50%)
    &:nth-of-type(2)
      right 100%
      transform translate(-50%, -50%)

