mixin cuboid(className)
  .cuboid(class=className)
    - let s = 0
    while s < 6
      .cuboid__side
        if s === 4
          .cuboid__eyes
            .cuboid__eye
            .cubdoi__eye
          .cuboid__mouth
      - s++

