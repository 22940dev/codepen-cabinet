*
  box-sizing border-box

body
  align-items      center
  background-color #111
  display          grid
  height           100vh
  justify-content  center
  margin           0
  padding          0
  width            100vw

$gap = 0
$height = 10
$width  = 8
$size = 25px

$colors = #f03434 #663399 #22a7f0 #00e640 #d35400 #f5ab35 #86e2d5 #1f3a93

fill(color)
  background-color color
  border-color color

.game
  background-color black
  border 4px solid black
  display grid
  grid-gap $gap
  grid-template-rows repeat($height, $size)
  grid-template-columns repeat($width, $size)
  overflow hidden

.piece
  display grid
  grid-gap $gap

.block
  border-radius 2px
  border-width 5px
  border-style outset

.square
  grid-column -4 / -2
  grid-row -3 / -1
  grid-template-columns repeat(2, 1fr)
  grid-template-rows repeat(2, 1fr)
  transform translateY(-500%)

  .block
    fill($colors[6])

.stick
  &--1
    grid-template-rows 1fr
    grid-template-columns repeat(4, 1fr)
    grid-column 1 / span 4
    grid-row -5 / span 1
    transform translateY(-700%)
    .block
      fill($colors[0])
  &--2
    grid-column -2 / span 1
    grid-row -5 / span 4
    transform translateY(-250%)
    .block
      fill($colors[1])

.ell
  grid-template-columns repeat(3, 1fr)
  grid-template-rows repeat(2, 1fr)

  &--1
    grid-column 5 / span 3
    grid-row -5 / span 2
    transform translateY(-400%)

    .block
      fill($colors[2])

      &:nth-child(4)
        grid-column -2

  &--2
    grid-column 1 / span 3
    grid-row -4 / span 2
    transform translateY(-450%)
    .block
      fill($colors[3])

.ess
  grid-template-columns repeat(3, 1fr)
  grid-template-rows repeat(2, 1fr)
  grid-column 3 / span 3
  grid-row -3 / span 2
  transform translateY(-500%)
  .block
    fill($colors[7])

    &:nth-child(3)
      grid-column 2
      grid-row 2
    &:nth-child(4)
      grid-column 3
      grid-row 2

.tee
  grid-template-columns repeat(3, 1fr)
  grid-template-rows repeat(2, 1fr)

  &--1
    grid-column 4 / span 3
    grid-row -4 / span 2
    transform translateY(-450%)
    .block
      fill($colors[4])
      &:nth-child(4)
        grid-column 2

  &--2
    grid-column 1 / span 3
    grid-row -3 / span 2
    transform translateY(-500%)
    .block
      fill($colors[5])

      &:nth-child(1)
        grid-column 2
      &:nth-child(2)
      &:nth-child(3)
      &:nth-child(4)
        grid-row 2
