  --width calc(14 * var(--cm))
  --height calc(2 * var(--cm))
  --z calc(1 * var(--cm))

  div
    background var(--peripheral-two)

    &:nth-of-type(1)
      background var(--peripheral-one)

  &__keys
    --depth calc(36 * var(--cm))
    --width calc(12 * var(--cm))
    --height calc(3 * var(--cm))
    --z calc(1.5 * var(--cm))
    --x calc(1 * var(--cm))
    --y calc(1 * var(--cm))
    div
      background hsl(0, 0%, 60%)

      &:nth-of-type(5):after
