*
*:after
*:before
  box-sizing border-box

:root
  --white hsl(0, 0%, 95%)
  --black hsl(0, 0%, 25%)
  --height 800
  --width 300

body
  min-height 100vh
  background var(--black)
  display flex
  align-items center
  justify-content center
  transform-origin top center

.clock
  height calc(var(--height) * 1px)
  background hsla(0, 0%, 100%, 0.15)
  width calc(var(--width) * 1px)
  position relative

  &__eye
    --size 110
    height calc(var(--size) * 1px)
    width calc(var(--size) * 1px)
    background var(--white)
    position absolute
    top calc(var(--height) * 0.055px)
    border-radius 50%
    left 50%
    &:after
      content ''
      height 110%
      width 110%
      border 4px solid var(--white)
      border-radius 50%
      position absolute
      top 50%
      left 50%
      $clip = polygon(50% 50%, 85% 0, 15% 0)
      -webkit-clip-path $clip
      clip-path $clip

    &--left
      transform translate(-104%, 0%)
      &:after
        transform translate(-48%, -57%)

    &--right
      transform translate(4%, 0%)
      &:after
        transform translate(-52%, -57%)
  &__body
    --size 200
    background var(--white)
    height calc(var(--size) * 1px)
    width calc(var(--size) * 1px)
    position absolute
    top 46%
    left 50%
    transform translate(-50%, -50%)
    border-radius 50%

    &:after
      content ''
      position absolute
      top 50%
      left 50%
      border-radius 50%
      background var(--black)
      height 25px
      width 25px
      transform translate(-50%, -50%)

  &__dot
    height 10px
    width 10px
    background var(--black)
    border-radius 50%
    top 50%
    left 50%
    position absolute
    transform translate(-50%, -50%) rotate(calc(((360/12) * var(--index)) * 1deg)) translate(0, 92px)

  &__paw
    --size 68
    position absolute
    height calc(var(--size) * 1px)
    width calc(var(--size) * 1px)

    &--top-left
      top 234px
      left 15px

    &--bottom-left
      top 452px
      left 15px

    &--top-right
      top 234px
      left 215px

    &--bottom-right
      top 452px
      left 215px

  &__pad
    height 35%
    width 25%
    background var(--white)
    position absolute
    border-radius 50%

    &:nth-of-type(1)
      left 3%
      top 23%
      transform rotate(-22deg)
    &:nth-of-type(2)
      left 25%
      top 0%
      transform rotate(-15deg)
    &:nth-of-type(3)
      left 56%
      top 0%
      transform rotate(15deg)
    &:nth-of-type(4)
      left 74%
      top 28%
      transform rotate(20deg)
    &:nth-of-type(5)
      bottom 1%
      left 23%
      height 54%
      width 54%

  &__hand
    position absolute
    width 5px
    background var(--black)
    border-radius 2px 2px 0 0
    top 50%
    left 50%
    transform-origin bottom center

    &:before
      content ''
      position absolute
      bottom 0
      left 50%
      transform translate(-50%, 0)
      width 12px
      height 80%
      background var(--black)
      $clip = polygon(50% 0, 100% 20%, 75% 100%, 25% 100%, 0 20%)
      -webkit-clip-path $clip
      clip-path $clip

    &--minutes
      height 80px
      transform translate(-50%, -100%) rotate(0deg)
    &--hours
      height 70px
      transform translate(-50%, -100%) rotate(270deg)


img
  position fixed
  width 300px
  top 50%
  left 50%
  opacity 0.15
  transform translate(-50%, -50%) translate(-1.75px, 0)