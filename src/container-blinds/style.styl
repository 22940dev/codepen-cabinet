*
  box-sizing border-box
  transform-style preserve-3d

$size = 300

:root
  --height $size * 1px
  --width calc(0.6 * var(--height))

body
  min-height 100vh
  display grid
  place-items center
  justify-content center

.scene
  transform rotateX(-24deg) rotateY(32deg)

.window
  height var(--height)
  width var(--width)
  background hsla(10, 80%, 50%, 0.25)
  position relative

.blinds
  height 99%
  width 99%
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background hsla(210, 80%, 50%, 0.25)

  &__blinds
    width calc(0.99 * var(--width))
    height calc(0.99 * var(--height))
    background red
    position fixed
    left 0
    top 0
    transform-origin 50% 0
    transition transform 0.1s ease
    transform scaleY(calc(var(--open, 1)))




.cord
  contain layout inline-size
  --css-contain layout inline-size
  // position absolute
  top 0
  left 0

  &__handle
    position absolute
    bottom 0
    left 0
    transform translate(-50%, 50%)
    height 44px
    width 44px
    border-radius 50%
    background green
    pointer-events none

  &__thumb
    min-height 10px
    width 10px
    resize vertical
    overflow hidden
    background red
    transform-origin 100% 50%
    transform translate(-100%, 0) scaleX(2)
    max-height calc(0.99 * var(--height))

::-webkit-resizer
  display block
  appearance none
  background green
  box-sizing border-box
  border 10px solid blue
  height 44px !important
  width 44px !important

$steps = 10
for $p in 0..$steps
  $step = $size / $steps * $p
  $open = $p / $steps
  @container (min-height: {$step}px)
    .blinds__blinds
      --open $open

  @media --css-container and (min-height: $step * 1px)
    .blinds__blinds
      --open $open