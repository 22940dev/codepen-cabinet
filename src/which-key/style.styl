@import url('https://fonts.googleapis.com/css?family=Lato')
@import url('https://fonts.googleapis.com/css?family=Varela+Round')

*
  box-sizing border-box


#app
  font-family 'Lato', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center
  color #2c3e50

button
  border-radius 4px
  cursor pointer
  font-size 1rem
  padding 4px 12px
  justify-self center

$key-color = #000


.keys
  display flex
  flex-wrap wrap
  width 90vw
  margin 30px auto
  justify-content center

  &__backlog
    display flex
    flex-direction row
    width 100%
    flex-wrap wrap
    justify-content center
    .key
      background-color lighten($key-color, 20%)
      height 100px
      width  100px

      &__code
        font-size 2rem
      &__value
        font-size 1.15rem

.key
  background-color lighten($key-color, 10%)
  box-shadow 2px 2px 10px $key-color
  color #fafafa
  display grid
  border-radius 5px
  padding 10px
  width 150px
  height 150px
  margin 5px
  grid-template-columns 1fr
  grid-template-rows 1fr repeat(2, auto)
  font-family 'Varela Round', sans-serif
  animation fadeIn .2s ease 0s

  &__code
    font-size 4rem
  &__value
    font-size 2rem


@keyframes fadeIn
  from
    opacity 0

.filters
  display inline-grid
  grid-template-columns repeat(2, 1fr)
  grid-template-rows repeat(4, 1fr)

.filter
  display grid
  grid-template-columns repeat(2, auto)
  justify-content center
  align-content center

  &__input
    cursor pointer

  &__label
    width 130px
    cursor pointer