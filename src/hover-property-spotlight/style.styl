  animation flicker var(--flicker) infinite

.dummy h1
  color transparent
  background none

@keyframes flicker
  0%
  19.999%
  22%
  62.999%
  64%
  64.999%
  72%
  100%
    --alpha 1
  20%
  21.999%
  63%
  63.999%
  65%
  71.999%
    --alpha 0