*
  box-sizing border-box

:root
  --animation 0
  --fizzbuzz "1"
  --value 1

body
  display flex
  align-items center
  justify-content center
  min-height 100vh

input
  cursor pointer
  position relative
  width 250px

  &:before
    content ''
    position absolute
    bottom 50%
    left calc(var(--value) * 1%)
    transform translate(-50%, 50%)
    height 20px
    width 20px
    background radial-gradient(circle at 50% 50%, silver 50%, #000)
    box-sizing border-box
    border-radius 100%

  &:after
    animation fizzbuzz calc(var(--animation) * 1s) infinite linear
    content var(--fizzbuzz)
    position absolute
    bottom 150%
    left calc(var(--value) * 1%)
    transform translate(-50%, 0)
    font-size 2rem
    width 100px
    line-height 2rem
    text-align center

input[type=range]::-webkit-slider-thumb
  cursor pointer
  -webkit-appearance none
  opacity 0

input[type=range]::-moz-range-thumb
  cursor pointer
  opacity 0

input[type=range]::-ms-thumb
  cursor pointer
  opacity 0

@keyframes fizzbuzz
  0%, 100%
    transform translate(-50%, 0)
  50%
    transform translate(-50%, -50%)