*
  box-sizing border-box

body
  min-height 100vh
  display flex
  align-items center
  justify-content center
  overflow hidden

canvas
video
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%) scale(1)
  object-fit cover
  max-width 100%

.app
  display flex
  position relative
  flex-direction column
  justify-content center
  align-items center
  max-width 90%

.container
  position relative
  width 640px
  height 480px
  max-width 100%

canvas
  z-index 2

video:first-of-type
  transform translate(-50%, -50%) scale(4)
  filter blur(10px)

video:nth-of-type(2)
  visibility hidden


.show
  canvas
    visibility hidden
  video:nth-of-type(2)
    visibility visible

.controls
  padding 1rem
  position absolute
  top calc(100% + 1rem)
  background #ffffff
  display flex
  align-items center
  border-radius 6px

label span:nth-of-type(1)
  opacity 0
  height 0
  width 0
  position absolute
  left 100%

label
  margin-left 10px
  font-family sans-serif
  font-size 16px
  display inline-flex
  align-items center
  justify-content center
  color #2374c6

label svg
  height 24px
  width 24px
  fill #c20f00
