@keyframes pop-in
  from
    transform translate(0, 100%)

@keyframes sparkle
  0%, 50%, 100%
    transform scale(0) rotate(0)

  25%
    transform scale(1.2) rotate(450deg)

@keyframes grow
  from
    transform translate(0, 100%)

@keyframes blink-open
  0%, 10%, 40%, 100%
    transform scale(1)
  25%
    transform scale(0)
@keyframes blink-closed
  0%, 10%, 40%, 100%
    transform scale(0)
  25%
    transform scale(1)