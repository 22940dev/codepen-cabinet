.phonebook.phonebook--loading(v-on:scroll='update')
  +header()
  article.contact(v-if="detailOpened")
    +header(true)
    button.contact__close(v-on:click='closeDetails')
      +icon("M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z")
    button.contact__menu
      +icon("M12,16A2,2 0 0,1 14,18A2,2 0 0,1 12,20A2,2 0 0,1 10,18A2,2 0 0,1 12,16M12,10A2,2 0 0,1 14,12A2,2 0 0,1 12,14A2,2 0 0,1 10,12A2,2 0 0,1 12,10M12,4A2,2 0 0,1 14,6A2,2 0 0,1 12,8A2,2 0 0,1 10,6A2,2 0 0,1 12,4Z")
    .contact__title(v-bind:style="{'--y': messageTop}")
      .contact__avatar--backdrop(ref='activeAvatarBack', v-bind:style="{'--y': messageTop, 'background-image': 'url(' + activeContact.avatar + ')' }")
      img.contact__avatar(ref='activeAvatar', :src="activeContact.avatar", v-bind:style="{'--y': messageTop }")
      .contact__name(ref='activeName', v-bind:style="{'--y': messageTop }") {{activeContact.firstName}} {{activeContact.lastName}}
    .contact__details(ref='activeDetails', v-bind:style="{top: messageTop + 'px', '--y': 100, '--t': messageTop }")
      dl.contact-details
        - for(social of ['number', 'homenumber', 'email', 'whatsapp', 'twitter', 'instagram', 'codepen'])
          dt(v-if=`activeContact.${social}`)
            button.contact-details__action
              +icon(paths[social], 'contact-details__icon')
          dd.contact-details__detail(v-if=`activeContact.${social}`)= `{{activeContact.${social.toLowerCase()}}}`
    //- Fake message containers for animation transition
    ul.phonebook__contacts--fake.phonebook__contacts--fake-top(ref='topFake', v-if='detailOpened', v-bind:style="{bottom: fakePosOne + 'px'}")
      li.phonebook__contact(v-for='contact, i in contacts.slice(active - (active > 5 ? 5 : active), active)', :class="[i === (active > 5 ? 4 : active - 1) ? 'phonebook__contact--prev' : '']")
        img.phonebook__contact-avatar(:src="contact.avatar")
        .phonebook__contact-name {{contact.firstName}} {{contact.lastName}}
    ul.phonebook__contacts--fake.phonebook__contacts--fake-bottom(ref='bottomFake', v-if='detailOpened', v-bind:style="{top: fakePosTwo + 'px'}")
      li.phonebook__contact(v-for='contact, i in contacts.slice(active + 1, active + 5)', :class="[i === 0 ? 'phonebook__contact--next' : '']")
        img.phonebook__contact-avatar(:src="contact.avatar")
        .phonebook__contact-name {{contact.firstName}} {{contact.lastName}}
  ul.phonebook__contacts(ref='contacts', v-bind:class="{ 'phonebook__contacts--opening': detailOpened }")
    li.phonebook__contact(v-for="contact, i in contacts", v-on:click="() => selectContact(i, contact)", :class="[i === active ? 'phonebook__contact--active' : '', i === next ? 'phonebook__contact--next' : '', i === prev ? 'phonebook__contact--prev' : '']")
      img.phonebook__contact-avatar(:src="contact.avatar")
      .phonebook__contact-name {{contact.firstName}} {{contact.lastName}}