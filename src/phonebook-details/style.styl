*
  box-sizing border-box
  animation  fadeIn .5s

body
  align-items center
  background-color #26c281
  display flex
  justify-content center
  min-height 100vh

.phonebook
  border 1px solid black
  background #fafafa
  width 100vw
  height 100vh
  overflow auto

  @media(min-width 768px)
    height 480px
    width 320px

  &--loading
    *
      opacity 0

  &__contacts
    list-style none
    padding 45vh 0
    margin 0

    @media(min-width 768px)
      padding 190px 0

  &__contact
    border 1px solid grey
    height 50px
    transition height .1s, opacity .1s
    opacity .1
    display flex
    align-items center

    &-avatar
      height 100%

    &--next
    &--prev
      height 75px
      opacity .75

    &--active
      background red
      height 100px
      opacity 1