/**
  * Button
*/
.button {
    font-family: "Lato", "Lucida Grande","Lucida Sans Unicode", Tahoma, Sans-Serif;
    color: white;
    cursor: pointer;
}

.button-outline {
    background: none;
    border: 3px solid #ccc
}

.button-outline:hover
.button-outline:focus {
    background: white;
    border-color: white;
    color: black
}

.mini-button {
    font-family: "Lato", "Lucida Grande","Lucida Sans Unicode", Tahoma, Sans-Serif;
    font-size: 0.8rem;
    padding: 2px 7px;
    margin: 0 1px 0 0;
    border-width: 1px
}
