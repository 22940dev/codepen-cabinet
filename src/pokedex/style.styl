*
  box-sizing border-box

:root
  --size 50
  --unit calc((var(--size) / 305.6582) * 1vmin)

body
  align-items center
  display flex
  justify-content center
  min-height 100vh
  flex-direction column
  touch-action none

.grab
  position absolute
  height 44px
  width 44px
  opacity 0
  bottom calc(66 * var(--unit))
  left calc(54 * var(--unit))
  transform translate(-50%, 50%)
  cursor pointer
  z-index 2

  &:hover
    & ~ .pokedex__base .pokedex__main-button:not(.pokedex__main-button--active)
      circle:nth-of-type(1)
        fill purple
      path
        fill orange

.pokedex
  &__container
    height calc(425 * var(--unit))
    width calc(305.6582 * var(--unit))
    position relative
    // -43% to center it
    transform translate(-63%, 0)

    svg
      width 100%
      position absolute

  &__base
    top 0
    left 0

  &__flip
    width 100%
    height 85.5%
    position absolute
    bottom 0
    left 0%
    transform-origin 1% 50%
    transform translate(92.5%, 0) rotateY(180deg)
    transform-style preserve-3d

  &__flip--inner
    position absolute
    height 100%
    bottom 0
    left 0
    transform-origin 1% 50%
    backface-visibility hidden

  &__flip--outer
    position absolute
    left 0
    height 100%
    bottom 0
    width 100%
    transform rotateY(180deg)
    backface-visibility hidden

  &__pokemon-name
    fill #fff
    font-family monospace
    font-size 5px
    text-transform uppercase

  &__main-button
    cursor pointer
    circle:nth-of-type(1)
    path
      transition fill calc(var(--transition, 0.2) * 1s) ease
    circle:nth-of-type(1)
      fill red
    path
      fill green

    &:hover:not(.pokedex__main-button--active)
      circle:nth-of-type(1)
        fill purple
      path
        fill orange

    &--active
      circle:nth-of-type(1)
        fill yellow
      path
        fill blue