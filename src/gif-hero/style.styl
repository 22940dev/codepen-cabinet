@import url('https://fonts.googleapis.com/css?family=Corben:700|Lato:300');

*
  box-sizing border-box

:root
  --ratio 0


html
body
  text-align       center
  padding 0
  margin 0

$gifSrc = "https://media.giphy.com/media/qIoCLiOvOn3Rm/giphy.gif"

article
  max-width 600px
  margin 0 auto
  text-align justify
  columns 2
  font-family 'Lato', sans-serif
  padding 70px 20px 20px 20px


section
  break-inside avoid
  margin 0 0 20px 0

p
  margin 0 0 30px 0


.header
  &__bg
    filter brightness(15%) grayscale(100%)
    background url($gifSrc)
    background-size cover
    background-position center bottom
    height 80vh
    width 100vw

  &__text
    $font-size = 10vh
    position absolute
    left 0%
    top 0%
    font-size $font-size
    line-height $font-size
    font-weight bold
    background url($gifSrc)
    font-family 'Corben', cursive
    background-clip text
    -webkit-background-clip text
    background-size cover
    background-position center bottom
    height 80vh
    width 100vw
    color transparent
    z-index 2
    text-align center
    display flex
    justify-content center
    align-items flex-end
    opacity calc(1 - var(--ratio, 0))
    padding-bottom calc(30vh - (20vh * var(--ratio, 0)))
    filter brightness(150%) contrast(50%) grayscale(0%)


