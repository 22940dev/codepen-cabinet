*
*:after
*:before
  box-sizing border-box

body
  min-height 100vh
  background #fff
  overflow hidden


$steps = 2
$duration = .05s
$primary = rgb(107, 116, 172)
$hat = rgb(240, 236, 83)

.mr-rush
  height 374px
  left 50%
  position absolute
  top 50%
  transform translate(-50%, -50%)
  width 280px
  filter drop-shadow(4px 4px 4px black)

  &__eye
    z-index 3
    background black
    height 26px
    width 10px
    position absolute
    top 86px
    left 171px
    transform rotate(20deg)
    border-radius 5px 5px 5px 5px/15px 15px 14px 14px

  &__hat
    width 110px
    height 70px
    position absolute
    left 180px
    z-index 4
    transform rotate(25deg)
    top -4px
    $clip = polygon(2% 0, 88% 0, 100% 100%, 0 100%)
    -webkit-clip-path $clip
    clip-path $clip

    &:after
      content ''
      position absolute
      background $hat
      height 32px
      width 30px
      top 33px
      left 36px

    &:before
      content ''
      position absolute
      background $hat
      left 17px
      height 64px
      width 45px
      top 7px
      border 6px solid black
      border-radius 17px 19px 1px 21px/26px 61px 1px 31px

    &-brim
      content ''
      height 300px
      width 220px
      border-bottom 6px solid black
      position absolute
      left 50%
      bottom -1px
      transform translate(-50%, 0)
      border-radius 1px 1px 95px 100px / 1px 1px 160px 175px
      z-index 2

    &-top
      position absolute
      top 0
      left 48px
      height 80px
      width 45px
      background $hat
      border 6px solid black
      transform rotate(20deg)
      border-radius 22px 22px 26px 1px/30px 40px 40px 1px

  &__mouth

    &:after
      height 100px
      width 100px
      border 6px solid black
      position absolute
      top 98px
      left 82px
      z-index 4
      content ''
      border-radius 1px 1px 65px 34px / 1px 1px 85px 69px
      $clip = circle(48% at 55% 80%)
      -webkit-clip-path $clip
      clip-path $clip

    &:before
      height 30px
      width 30px
      border 6px solid black
      position absolute
      content ''
      top 128px
      left 166px
      z-index 4
      border-radius 1px 1px 1px 20px / 1px 1px 1px 20px
      border-top 0
      border-right 0
      $clip = circle(100% at -30% 110%)
      -webkit-clip-path $clip
      clip-path $clip


  &__body
    background $primary
    height 245px
    width 275px
    transform-origin top left
    top 94px
    position absolute
    transform rotate(-15deg) skewX(14deg)
    border 6px solid black
    $clip = polygon(0 0, 100% 0, 0 100%)
    -webkit-clip-path $clip
    clip-path $clip
    z-index 2

    &:after
      position absolute
      height 100%
      width 100%
      background black
      top 0
      left 0
      content ''
      $clip = polygon(107% -10%, -3% 100%, 100% 100%)
      -webkit-clip-path $clip
      clip-path $clip

  &__leg
    &-wrapper
      position absolute
      opacity 1

      &--right
        transform-origin 115px 270px
        animation run-right $duration steps($steps) infinite
        @keyframes run-right
          0%
            transform rotate(0deg)
          100%
            transform rotate(-120deg)

      &--left
        z-index 3
        transform-origin 106px 280px
        animation run-left $duration steps($steps) infinite

        @keyframes run-left
          0%
            transform rotate(0deg)
          100%
            transform rotate(45deg)

    &--right
      height 24px
      width 60px
      position absolute
      top 270px
      left 55px
      background $primary
      transform rotate(-20deg)

      &:before
        content ''
        position absolute
        top -6px
        border 6px solid black
        border-bottom 0
        border-left 0
        left 9px
        background $primary
        height 27px
        width 46px
        transform rotate(0deg)
        // opacity .5
        border-radius 36px 28px 1px 1px/36px 34px 1px 1px

      &:after
        content ''
        width 46px
        height 27px
        position absolute
        top 18px
        left -5px
        border 6px solid black
        border-left 0
        border-right 0
        border-bottom 0
        border-radius 40px 20px 1px 1px/20px 10px 1px 1px

    &--left
      height 50px
      width 50px
      top 270px
      left 90px
      position absolute
      z-index 3

      &:before
        content ''
        height 50px
        width 50px
        background black
        position absolute
        border 6px solid black
        border-top 0
        border-right 0
        border-radius 49px 1px 34px 17px/41px 1px 45px 20px
        $clip = polygon(0 0, 28% 0, 85% 100%, 0% 100%)
        -webkit-clip-path $clip
        clip-path $clip

      &:after
        content ''
        height 50px
        width 50px
        background $primary
        position absolute
        border-top 0
        border-right 0
        border-radius 49px 1px 34px 17px/41px 1px 45px 20px
        transform scale(0.7)
        $clip = polygon(0 0, 75% 0, 100% 100%, 0 100%)
        -webkit-clip-path $clip
        clip-path $clip

  &__foot
    &--left
      height 100px
      width 50px
      position absolute
      top 272px
      left 100px
      background $primary
      border 6px solid black
      transform rotate(45deg) translate(16px, 0)
      border-radius 16px 38px 28px 35px/27px 90px 25px 35px

      &:before
        content ''
        position absolute
        top 8px
        left -38px
        background $primary
        height 23px
        width 47px
        transform rotate(14deg)


      &:after
        content ''
        height 24px
        width 26px
        border 6px solid black
        border-radius 100%
        position absolute
        top -9px
        left -23px
        transform rotate(21deg)
        $clip = polygon(0 60%, 100% 60%, 100% 100%, 0% 100%)
        -webkit-clip-path $clip
        clip-path $clip

    &--right
      height 93px
      width 48px
      position absolute
      top 228px
      left 26px
      background $primary
      border 6px solid black
      transform rotate(8deg) translate(0, 0)
      border-radius 75px 38px 80px 61px/93px 90px 70px 86px

      &:before
        content ''
        position absolute
        top 46px
        left 8px
        background $primary
        height 17px
        width 47px
        transform rotate(-34deg)

  &__hand
    &--one
      height 55px
      width 106px
      position absolute
      top 17px
      left 35px
      transform rotate(-15deg)
    &--two
      height 97px
      width 73px
      position absolute
      left 195px
      top 124px
      transform rotate(26deg)

  &__finger
    &--one
      height 24px
      width 40px
      background $primary
      border 6px solid black
      position absolute
      top 22px
      left 0
      border-radius 24px 45px 20px 28px/26px 23px 14px 22px

    &--two
      height 40px
      width 28px
      background $primary
      border 6px solid black
      position absolute
      top 3px
      left 24px
      transform rotate(-38deg)
      border-radius 32px 49px 53px 28px/41px 52px 51px 22px
      z-index 2

    &--three
      height 40px
      width 28px
      background $primary
      border 6px solid black
      position absolute
      top 1px
      left 46px
      transform rotate(18deg)
      border-radius 32px 49px 53px 28px/41px 52px 51px 22px

    &--four
      height 43px
      width 28px
      background $primary
      border 6px solid black
      position absolute
      top 11px
      left 68px
      transform rotate(74deg)
      border-radius 32px 49px 53px 42px/41px 52px 51px 100px

    &--five
      height 55px
      width 34px
      background $primary
      border 6px solid black
      position absolute
      left 8px
      top 3px
      transform rotate(-15deg) translate(2px, 0)
      border-radius 34px 20px 28px 26px/35px 32px 51px 47px
      z-index 2

    &--six
      height 60px
      width 25px
      background $primary
      border 6px solid black
      position absolute
      left 30px
      top 6px
      transform rotate(57deg) translate(2px, 0)
      border-radius 34px 28px 28px 26px/35px 42px 51px 47px

    &--seven
      height 30px
      width 50px
      border 6px solid black
      background $primary
      position absolute
      top 41px
      left 24px
      transform rotate(18deg)
      border-radius 17px 14px 21px 1px/21px 13px 19px 1px

    &--eight
      height 50px
      width 36px
      border 6px solid black
      position absolute
      top 46px
      left 13px
      transform rotate(-31deg)
      background $primary
      border-radius 48px 1px 18px 17px/45px 1px 31px 28px

  &__palm
    &--one
      height 15px
      width 50px
      background $primary
      z-index 3
      border-right 6px solid black
      border-left 6px solid black
      position absolute
      bottom 0
      left 25px

      &:before
        content ''
        background $primary
        height 18px
        width 51px
        position absolute
        top -18px
        left -6px
        border-radius 33px 33px 9px 1px/16px 19px 9px 1px

      &:after
        content ''
        background $primary
        height 16px
        width 46px
        position absolute
        top -14px
        left 1px
        border-radius 33px 33px 9px 1px/16px 19px 9px 1px

    &--two
      height 29px
      border-top 6px solid black
      background $primary
      width 43px
      position absolute
      left -15px
      top 48px
      transform rotate(-29deg)
      z-index 3

      &:before
        content ''
        height 23px
        width 67px
        border-bottom 6px solid black
        background $primary
        position absolute
        bottom 0
        transform rotate(-10deg)

      &:after
        content ''
        height 27px
        width 48px
        background $primary
        position absolute
        top -1px
        left 27px
        transform rotate(-4deg)
        border-radius 1px 1px 25px 1px / 1px 1px 25px 1px

  &__cloud
    height 40px
    width 40px
    border 6px solid black
    position absolute
    bottom 45px
    right 30px
    border-radius 100%
    background white
    transform rotateY(180deg)
    animation cloud $duration steps($steps) infinite

    @keyframes cloud
      0%
        transform rotateY(180deg)
      100%
        opacity .5
        transform rotateY(180deg) translate(-200px, 0) scale(0.25)

    div
      background white
      border 6px solid black
      position absolute

    div:nth-of-type(1)
      height 35px
      width 30px
      top -15px
      border-radius 100%
      border-bottom 0

    div:nth-of-type(2)
      height 30px
      width 30px
      top 2px
      left -15px
      border-radius 100%
      border-right 0

    div:nth-of-type(3)
      height 40px
      width 40px
      top 2px
      left 5px
      border-radius 100%
      border-left 0
      border-top 0

    div:nth-of-type(4)
      height 30px
      width 37px
      top 21px
      left -9px
      border-radius 100%
      border-top 0
      border-right 0