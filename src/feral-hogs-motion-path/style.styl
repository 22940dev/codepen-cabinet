*
  box-sizing border-box

body
  display flex
  min-height 100vh
  align-items center
  justify-content center


.pen
  height 300px
  width 300px
  background brown
  position relative

.hog
  background orange
  height 20px
  width 20px
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  animation traverse 5s infinite linear
  offset-path 'path(%s)' % var(--path)

  &:nth-of-type(2)
    animation-delay 1s
    left 75%

  &:after
    content ''
    position absolute
    top 50%
    left 100%
    height 5px
    width 5px
    border-radius 100%
    background purple
    transform translate(-50%, -50%)


@keyframes traverse
  from
    offset-distance 0
  to
    offset-distance 100%