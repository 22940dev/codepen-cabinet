*
  box-sizing border-box

body
  min-height 100vh

canvas
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  height 100vh
  width 100vw
  background hsl(0, 10%, 10%)

button
  position fixed
  top 50%
  left 50%
  z-index 2
  transform translate(-50%, -50%)
  padding 1rem 2rem
  border-radius 0.5rem
  font-family sans-serif
  font-weight bold
  font-size 1.25rem
