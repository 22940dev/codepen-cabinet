$red = rgb(235, 51 80)
$green = rgb(31, 139, 61)
$black = rgb(0, 0, 0)
$yellow = rgb(250, 178, 63)
$blue = rgb(21, 135, 193)

random(ceiling)
  return floor(math(1, 'random')*ceiling + 3)

*
  box-sizing border-box

body
  background-color lighten(#000, 30%)
  display grid
  align-items center
  justify-content center
  margin  0
  padding 0
  height 100vh
  width 100vw

.snow
  animation-name move
  animation-timing-function linear
  animation-iteration-count infinite
  height 100vh
  position absolute
  left 0
  top 0
  width  100vw
  z-index 1

  for $slide in (1..3)
    &:nth-of-type({$slide})
      animation-duration random(10) * 1s

$ring-size = 50px
.rings
  position relative
  z-index -1

.ring
  height $ring-size
  width  $ring-size
  border-width ($ring-size / 10) * 1px
  border-radius 100%
  border-style solid
  position absolute
  left 50%
  top 50%
  margin-left -($ring-size / 2)
  margin-top -($ring-size / 2)

  @media(min-width 768px)
    $ring-size = $ring-size * 2
    height $ring-size
    width  $ring-size
    border-width ($ring-size / 10) * 1px
    margin-left ($ring-size / 2) * -1px
    margin-top ($ring-size / 2) * -1px

  &--red
    border-color $red
    transform translateX(110%) rotate(90deg)

  &--green
    border-color $green
    transform translate(55%, 45%) rotate(180deg)
    z-index 2

  &--black
    border-color $black
    transform rotate(90deg)

  &--blue
    border-color $blue
    transform translateX(-110%)

  &--yellow
    border-color $yellow
    transform translate(-55%, 45%)
    z-index 1

  &-segment
    border-bottom-color transparent
    z-index 3

@keyframes move
  from
    background-position 0 0
  to
    background-position 0 100vh
