:root
  --x 250
  --y 250

*
  box-sizing border-box

body
  background-color #111
  height 100vh
  width 100vw
  display flex
  align-items center
  justify-content center

.crowd
  display grid
  grid-template-rows repeat(10, 48px)
  grid-template-columns repeat(20, 54px)
  max-width 100vw
  overflow hidden

.spotlight
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  opacity .95
  background -webkit-radial-gradient(calc(var(--x) * 1px) calc(var(--y) * 1px), circle cover, transparent 0px, #111 100px)

.emoji
  font-size 54px
  width 54px
  &--man
    &:after
      content '🙍‍♂️'
    &.emoji--chosen
      &:after
        content '🙆‍♂️'

  &--woman
    &:after
      content '🙍‍'
    &.emoji--chosen
      &:after
        content '🙆‍'