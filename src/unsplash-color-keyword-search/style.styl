*
  box-sizing border-box

body
  margin 0
  padding 0
  transition background .25s ease

#app
  align-items center
  display flex
  flex-direction column
  justify-content center
  min-height 100vh

.colors
  display flex
  align-items center
  justify-content center
  min-height 100px

.color
  border-radius 100%
  background-color var(--color)
  position relative
  height 100px
  width 100px
  cursor pointer
  overflow hidden
  text-transform uppercase
  color #fafafa
  margin 0 5px

  &__hex
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-weight bold
    z-index 2

  &:hover
    img
      opacity 1

  img
    opacity 0
    transition opacity .25s ease
    position absolute



button
  cursor pointer
  padding 12px 24px
  border-radius 12px
  border 4px solid #2eecc7
  color #2eecc7
  font-weight bold
  font-size 1.25rem

  &:active
    color #ffffff
    background #2eecc7

h1
  color #2eecc7
  font-weight bold
  font-size 4rem

img
  height 100px
  width 100px
  object-fit cover

.searching
  filter grayscale(1)