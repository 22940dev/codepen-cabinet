@import url('https://fonts.googleapis.com/css?family=Roboto');

:root
  --fontSize 16px

*
  box-sizing border-box
  animation  fadeIn .5s
  font-size var(--fontSize)
  transition font-size .25s ease

body
  font-family 'Roboto', sans-serif
  font-size 1rem
  text-align center
  color #fafafa
  background #111

h1
  font-size 2rem

h2
  font-size 1.5rem

h3
  font-size 1.17rem

h4
  font-size 1.33rem

h5
  font-size 0.83rem

input
  position absolute
  top 20px
  right 4px
  cursor pointer

  &:before
  &:after
    content 'A'
    display block
    position absolute
    bottom 100%

  &:before
    left 0
    font-size 8px

  &:after
    right 0
    font-size 16px

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1
