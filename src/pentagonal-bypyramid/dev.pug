- const SIDE_LENGTH = 300
- const RADIUS = SIDE_LENGTH / 10 * Math.sqrt(25 + 10 * Math.sqrt(5))
- const ANGLE = Math.asin(RADIUS / SIDE_LENGTH) * (180 / Math.PI)
.gallery(style=`--side: ${SIDE_LENGTH}; --radius: ${RADIUS}; --angle: ${ANGLE}`)
  for image, index in IMAGES
    input(type="radio", name="gallery" checked=image===IMAGES[0], id=index)
  .gallery__images
    for image in IMAGES
      img(src=image, alt="")
  .gallery__controls
    for image, index in IMAGES
      .gallery__control-set
        label.gallery__control.gallery__control--left(for=`${index === 0 ? IMAGES.length - 1 : index - 1}`)
          span(title="Show previous doggo")
            svg(viewbox='0 0 24 24')
              path(d='M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z')
        label.gallery__control.gallery__control--right(for=`${index === IMAGES.length - 1 ? 0 : index + 1}`)
          span(title="Show next doggo")
            svg(viewbox='0 0 24 24', title="Show next doggo")
              path(d='M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z')

  .gallery__indicators
    for image, index in IMAGES
      label.gallery__indicator(for=index)