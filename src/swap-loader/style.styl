*
  box-sizing border-box

body
  background-color #111

genTransformAndAnimation($num, $id)
  @keyframes $id
    0%, 10%, 90%, 100%
      transform rotate((360 / 5 * $num) * 1deg)
    20%, 80%
      transform rotate((360 / 5 * $num) * 1deg) translateY(200%)

  transform rotate((360 / 5 * $num) * 1deg)
  animation unquote($id) 4s ($num * .1s) infinite

.loader
  position absolute
  top 50%
  left 50%
  background-color red
  height 20px
  width 20px
  animation rotate 4s infinite linear

  div
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color white
    border-radius 100%

  for $child in (1..5)
    div:nth-of-type({$child})
      genTransformAndAnimation($child, 'load--' + $child)

@keyframes rotate
  to
    transform rotate(360deg)

@keyframes load
  50%, 100%
    transform translateY(200px)
