*
  box-sizing border-box

body
  background linear-gradient(0deg, blue, #111 40%)
  display flex
  height 100vh
  width 100vw
  align-items center
  justify-content center

@keyframes flash
  0%, 24%
    background-color dodgerblue
  25%, 100%
    background-color transparent

@keyframes load
  to
    transform translateY(100000%)

$noOfPanels = 10
for num in (1..$noOfPanels)
  .carousel__activator:nth-of-type({num}) ~ .carousel__slide:nth-of-type({num})
    display block
    animation showSlide .5s