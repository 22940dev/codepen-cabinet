*
  box-sizing border-box
  animation  fadeIn .5s

body
  background-color #616161
  overflow         hidden

@keyframes fadeIn
  to
    opacity 1


/**
* Functions
*/
getPosition(angle, radius)
  xPos = radius * cos(angle * (PI / 180))
  yPos = radius * sin(angle * (PI / 180))
  (xPos yPos)

ring-transformation(child, amount, radius)
  &:nth-of-type({child})
    .ring__element
      $noOfElements = 26
      for num in 1..amount
        $angle = (360 / amount) * num
        $pos   = getPosition($angle, radius)
        &:nth-child({num})
          $rotation = (360 / amount) * (num + 1)
          transform translate($pos[0], $pos[1]) rotate($rotation * 1deg)

.ring
  height 4px
  width  4px
  position fixed
  top 50%
  left 50%
  margin-left -4px
  margin-top  -4px
  transform rotate(10deg)

  &__element
    height 20px
    width  20px
    border 4px solid #fafafa
    position absolute
    top      50%
    left     50%
    margin-left -10px
    margin-top -10px
    &:nth-child(odd)
      border 4px solid #111

  for ring in 1..15
    ring-transformation(ring, (ring * 12) + 2, (ring * 50) + 10px)
