*
  box-sizing border-box

:root
  --bg hsl(250, 30%, 10%)
  --size 50vmin

body
  background-color var(--bg)
  min-height 100vh

.globe
  height var(--size)
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.food
  position absolute
  height 5vmin
  width 5vmin
  border-radius 50%
  background red
  top calc(var(--y) * 1px)
  left calc(var(--x) * 1px)

