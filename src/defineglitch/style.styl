*
  box-sizing border-box
  animation  fadeIn .5s

body
  background-color #111
  color            #fafafa
  height           100vh
  width            100vw

  margin           0
  padding          0

canvas
  height           60px
  width            420px
  position         absolute
  top              50%
  left             50%
  transform        translate(-50%, -50%)

  @media(max-width 420px)
    height 45px
    width 320px

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

.controls
  label
    display block
    margin-bottom 5px
  position absolute
  padding 20px
  top 10px
  right 10px
