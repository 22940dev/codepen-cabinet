*
  box-sizing border-box

body
  min-height 100vh
  font-family sans-serif
  margin 0
  padding 0
  overflow-x hidden

.apple-video
  height 100vh
  width 100vw
  position absolute
video
  height 100vh
  width 100vw
  position absolute
  object-fit cover
  object-position 100% 50%




.section
  display none
  height 100vh
  background hsl(180, 100%, 90%)

  &--apple
    background none
    position absolute
    width 25vmin
    height 25vmin
    top 50%
    left 50%
    transform translate(-50%, -50%)

    img
      position absolute
      display none
      height 100%
      width 100%
      object-fit cover

  &--intro
    height 400vh
    background none

  &--rotater
    background hsl(0, 0%, 5%)
    height 400vh

  &--clipper
    height 400vh
    overflow hidden

  &__content
    height 100vh
    display flex
    align-items center
    flex-direction column
    justify-content center
    position relative

    & > h1 + h1
      margin 0 0 1rem 0