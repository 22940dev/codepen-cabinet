$duration = 0.25s
$width = 150px

*
  box-sizing border-box

body
  background #fafafa
  margin 0
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight 300
  padding 0
  min-height 100vh

.debug-video
  width 100%

.copy-box
  z-index 4
  top 0
  position fixed
  color var(--dark)
  background var(--bg)
  width 50vw
  left 50%
  transform translate(-50%, 0)
  text-align center
  padding $width * 0.1
  font-weight bold


#app
  height 100vh

svg
  cursor pointer
  height 44px
  width 44px

  path
    fill var(--set)

button
  cursor pointer
  border 2px solid var(--set)
  line-height 44px
  font-size 14px
  color var(--set)
  background transparent
  font-weight bold
  transition background $duration, color $duration
  margin-bottom 10px
  display inline-block

  &:hover
    background var(--set)
    color var(--selected)

h1
  font-size 2rem
  text-align center

.hex
  position fixed
  left 0
  top 0
  height 100vh
  width 100vw
  display flex
  flex-direction column
  color var(--set)
  align-items center
  justify-content center
  background var(--bg)
  -webkit-user-select none
  -webkit-tap-highlight-color transparent
  cursor pointer

.colors
  --size 80
  display flex
  flex-direction column
  overflow auto
  margin-top 15px

  &__color
    height 100%
    width 100%
    background var(--bg)
    grid-row 1
    color var(--color)
    text-transform uppercase
    line-height calc(var(--size) * 1px)
    height calc(var(--size) * 1px)
    text-align center
    margin-bottom 5px
    border 2px solid var(--color)
    font-weight bold

.menu
  bottom 0
  left 0
  position fixed
  top 0

  &__content
    background var(--bg)
    color var(--set)
    margin 0
    padding ($width * 0.1) ($width * 0.1) ($width * 0.1) ($width + ($width * 0.1))
    position absolute
    right 100%
    top 0
    bottom 0
    display flex
    flex-direction column
    width $width * 2
    transition transform $duration $duration cubic-bezier(0.175, 0.885, 0.32, 1.275)
    z-index 2

  &__toggle-label
    height 44px
    left 0
    position absolute
    width 44px

    svg
      left 10px
      position absolute
      top 10px
      transition transform $duration ($duration * 2)
      z-index 2

      &:nth-of-type(2)
        left ($width + 10px)
        transform scale(0)
        transition transform $duration

  &__toggle
    opacity 0
    position fixed

    &:checked ~ .menu__toggle-label
      // height 100vh
      // left 0
      // position fixed
      // top 0
      // width 100vw

      svg
        transition transform $duration

      svg:nth-of-type(1)
        transform scale(0)

      svg:nth-of-type(2)
        left $width + 10px
        transform scale(1)
        transition transform $duration ($duration * 2)

    &:checked ~ .menu__content
      transform translate(50%, 0)