*
  box-sizing border-box

:root
  --wave white
  --bg hsl(280, 30%, 30%)

body
  min-height 100vh
  display flex
  align-items center
  flex-direction column
  justify-content center

main
  background var(--bg)
  flex 1
  width 100vw
  position relative
  overflow hidden

.wave
  position absolute
  bottom -5%
  left 0
  right 0

  &:nth-of-type(1)
    --speed 30
    --opacity 0.3
    --height 12
    --width 400

  &:nth-of-type(2)
    --speed 45
    --opacity 0.6
    --height 10
    --width 300

  &:nth-of-type(3)
    --speed 15
    --opacity 1
    --height 6
    --width 200

footer
  background var(--wave)
  flex 1

.wave
  background-image url("https://assets.codepen.io/605876/wave--infinite.svg")
  height calc(var(--height, 0) * 1vh)
  width calc(var(--width, 0) * 1vw)
  opacity var(--opacity)
  animation wave calc(var(--speed, 0) * 1s) infinite linear

  @media(max-width 480px)
    height calc(var(--height, 0) * 0.75vh)


@keyframes wave
  to
    transform translate(-50%, 0)