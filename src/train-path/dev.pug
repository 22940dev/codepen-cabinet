mixin cloud()
  - const speed = Math.random() * 20 + 60
  - const translation = (Math.random() * 25 + 50) / 100
  - const delay = Math.random() * speed
  - const direction = Math.random() > 0.5 ? 'normal' : 'reverse'
  - const opacity = Math.random()
  - const height = Math.random() * 10 + 5
  - const width = Math.random() * 20 + 15
  .scene__cloud(style=`--delay: ${delay}; --speed: ${speed}; --opacity: ${opacity}; --height: ${height}; --width: ${width}; --direction: ${direction}; --translation: ${translation};`)
mixin rockOrHedge()
  - const HUE = Math.random() * 35 + 90
  - const SATURATION = Math.random() > 0.5 ? Math.random() * 25 + 75 : Math.random() * 25
  - const LIGHTNESS = Math.random() * 50 + 25
  - const SIZE = Math.random() * 5 + 1
  - const DISTANCE = Math.random() * 100
  .rock-or-hedge(style=`--hue: ${HUE}; --saturation: ${SATURATION}; --lightness: ${LIGHTNESS}; --size: ${SIZE}; --distance: ${DISTANCE};`)
mixin cedar()
  - const HUE = Math.random() * 35 + 90
  - const SATURATION = Math.random() * 25 + 75
  - const LIGHTNESS = Math.random() * 25 + 25
  - const SIZE = Math.random() * 5 + 1
  - const DISTANCE = Math.random() * 100
  svg.cedar(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 217' style=`--hue: ${HUE}; --saturation: ${SATURATION}; --lightness: ${LIGHTNESS}; --size: ${SIZE}; --distance: ${DISTANCE};`)
    g(transform='translate(-39 -72)')
      rect(width='30.2' height='103.6' x='74' y='185' ry='1.1')
      path(d='M89 72l50 179H39L89 72z')
mixin tree()
  - const HUE = Math.random() * 35 + 90
  - const SATURATION = Math.random() * 25 + 75
  - const LIGHTNESS = Math.random() * 25 + 25
  - const SIZE = Math.random() * 5 + 1
  - const DISTANCE = Math.random() * 100
  svg.tree(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 135 209'  style=`--hue: ${HUE}; --saturation: ${SATURATION}; --lightness: ${LIGHTNESS}; --size: ${SIZE}; --distance: ${DISTANCE};`)
    g(transform='translate(-20 -81)')
      rect(ry='1.1' y='186' x='91' height='103.6' width='30.2')
      rect(ry='48.4' y='81' x='58' height='139.1' width='96.8')
      rect(transform='rotate(32)' ry='0' y='143' x='166' height='12.1' width='52.2')
      circle(r='35.5' cy='199.5' cx='55.2')


