*
  box-sizing border-box

:root
  --train-size 50

body
  display flex
  min-height 100vh
  align-items center
  justify-content center
  background hsl(78, 60%, 50%)
  background black
  &:after
    content ''
    position fixed

svg
  height 100%
  width 100%

.train__container
  // background blue
  height calc(var(--train-size) * 1vmin)
  width calc(var(--train-size) * 1vmin)
  svg
    transform scale(1.5) translate(-17%, -13%)

.bubbles
  filter blur(10px)

