*
  box-sizing border-box

body
  background dodgerblue
  min-height 100vh

.scene
  align-items center
  display flex
  height 100vh
  justify-content center
  width 100vw

.panda
  width 300px

  &__wrap
    position relative

  &__actions
    display flex
    height 100%
    left 0
    opacity 0
    position absolute
    top 0
    width 100%

  &__paw

    &-control
      background transparent
      cursor pointer
      height 100%
      flex 1

    &--hidden
      display none
