@import url('https://fonts.googleapis.com/css?family=Lato')
*
  box-sizing border-box
  animation  fadeIn .5s

body
  background-color #52b3d9
  color            #fafafa
  text-align       center
  font-size        16px
  font-family 'Lato', sans-serif

p
  max-width 300px
  margin 0 auto 30px

h1
  font-size 2.5rem

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

textarea
  height 150px

.demo-input
  margin 10px auto

.use-cases
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  .use-case
    margin 0 15px

.custom-suggestions
  $active-color = #19b5fe
  cursor pointer
  list-style none
  margin 0
  padding 0
  &--active
    background-color $active-color
  li
    text-align left
    &:hover
      background-color $active-color

.input
  $line-height = 16px
  $font-size = 16px
  $color = #111
  border 0
  border-radius 4px
  color $color
  font-size $font-size
  line-height $line-height
  outline 0
  padding 10px 12px
  position relative
  text-align left
  width   230px
  &::placeholder
    color lighten($color, 80%)
    text-align center
  &__marker
    $marker-color = #111
    background-color $marker-color
    border-radius 4px
    box-shadow 0 2px 5px lighten($marker-color, 30%)
    display block
    font-size 12px
    padding 4px 6px
    position absolute
    transform translate(5%, -70%)
    transition top .1s ease 0s, left .1s ease 0s
    white-space nowrap
    width  auto
    z-index 9999
    &:after
      background-color $marker-color
      content ''
      height 10px
      position absolute
      width  15px
      z-index -1
    &--position
      &:after
        bottom 0
        left 0
        transform translate(-10%, 10%) rotate(-15deg) skewX(-40deg)
    &--selection
      transform translate(-50%, -100%)
      &:after
        bottom 0
        left 50%
        transform translate(-50%, 0) rotate(45deg)
    &--custom
      transform translate($font-size, $line-height)
      &:after
        display none