@import url('https://fonts.googleapis.com/css?family=Roboto')

*
  box-sizing border-box

body
  background linear-gradient(45deg, rgba(0, 255, 255, 0.5), rgba(255, 0, 0, 0.5)),
    radial-gradient(circle at 0% 0%, rgba(0, 255, 0, 0.45), transparent 75%)
  color #fff
  display flex
  align-items center
  justify-content center
  min-height 100vh
  padding 0
  margin 0
  font-family 'Roboto', sans-serif

h1
  font-size 1.25rem
  margin 0
  max-width 100%
  text-align center
  word-wrap break-word
  font-weight bold
  transition color .25s

.potential
  height 120px
  display flex
  align-items center
  justify-content center
  width 100%

.actions
  display flex
  justify-content flex-end
  width 100%

.options
  padding 20px 0
  display grid
  grid-template-columns repeat(4, auto)
  grid-template-rows repeat(4, 1fr)
  grid-row-gap 12px
  align-items center
  justify-items center
  width 200px

  label
    text-align right
    padding-right 4px

    &:nth-of-type(1)
      text-align left

  label
  input
    color #111
    margin 0
    width 100%

@keyframes fadeIn
  from
    opacity 0

@keyframes bounceIn
  from
    transform translate(-50%, -50%) scale(0)

dialog + .backdrop
  animation fadeIn .25s
  background rgba(152, 51, 153, 0.5)

.dialog
  animation bounceIn .25s cubic-bezier(0.175, 0.885, 0.32, 1.275)
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%) scale(1)
  margin 0
  padding 0
  border-radius 6px
  transition background .25s, border-color .25s
  max-width 400px
  width 90vw

  &::backdrop
    animation fadeIn .25s
    background rgba(152, 51, 153, 0.5)

  &__content
    background #fff
    border-radius 6px
    padding 20px
    overflow hidden
    display flex
    flex-direction column
    align-items center

dialog ~ div
  align-items center
  justify-content center
  display flex
  flex-direction column

  label
    font-size 1.5rem
    margin-bottom 10px

  input
    font-size 1.75rem
    padding 6px 12px
    border 0
    border-radius 6px
    margin-bottom 10px

svg
  height 30px
  path
    fill dodgerblue

label[for]
[type]
  cursor pointer

button
  background dodgerblue
  border 0
  border-radius 6px
  cursor pointer
  color #fff
  height 44px
  padding 8px 12px
  min-width 120px
  font-size 14px

.check
  width 40px
  height 20px
  margin-right 4px
  overflow hidden
  position relative
  border-radius 10px

  input
    width 100%
    height 100%
    position absolute
    z-index 2
    opacity 0

    &:checked ~ span:nth-of-type(2)
      transform translate(100%, 0)
      background dodgerblue

    &:checked ~ span:nth-of-type(1)
      background lighten(dodgerblue, 75%)

  span
    border-radius 10px
    height 20px
    position absolute
    top 0
    left 0
    transition transform .1s, background .1s

  span:nth-of-type(1)
    width 40px
    background lighten(#ccc, 75%)

  span:nth-of-type(2)
    width 20px
    background #ccc


input[type=range]
  -webkit-appearance none
  margin 18px 0
  width 100%
  outline 0

  &:focus
    outline none

  &:focus::-moz-range-track
    outline 0

  &::-webkit-slider-runnable-track
    width 100%
    height 8px
    cursor pointer
    animate 0.2s
    background lighten(dodgerblue, 75%)
    border-radius 4px
    outline 0

  &::-moz-range-track
    width 100%
    height 8px
    cursor pointer
    outline 0
    animate 0.2s
    background lighten(dodgerblue, 75%)
    border-radius 4px


  &::-webkit-slider-thumb
    height 20px
    width 20px
    border-radius 100%
    background dodgerblue
    cursor pointer
    -webkit-appearance none
    margin-top -5px


  &::-moz-range-thumb
    height 20px
    width 20px
    border-radius 100%
    background dodgerblue
    cursor pointer