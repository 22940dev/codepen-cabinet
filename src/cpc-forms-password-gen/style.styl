*
  box-sizing border-box

body
  background linear-gradient(45deg, rgba(0, 255, 255, 0.5), rgba(255, 0, 0, 0.5)),
    radial-gradient(circle at 0% 0%, rgba(0, 255, 0, 0.45), transparent 75%)
  color            #fafafa
  display flex
  align-items center
  justify-content center
  min-height 100vh
  padding 0
  margin 0
  font-family 'Roboto', sans-serif

@keyframes fadeIn
  from
    opacity 0

@keyframes moveGradient
  0, 100%
    transform translate(-50vw, -50vh)
  50%
    transform translate(25vw, 50vh)