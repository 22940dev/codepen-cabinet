*
  box-sizing border-box

body
  background #111
  margin 0
  padding 0


.masonry-body
  height 100vh
  width 100vw
  overflow hidden

.masonry-panel
  max-height 100vh

  &--loading
    flex 1 1 20%

img
  width 100%
  max-height 500px
  object-fit cover
  transition transform .25s ease 0s

  &:hover
    transform scale(1.25)

