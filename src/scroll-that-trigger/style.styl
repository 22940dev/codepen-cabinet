*
  box-sizing border-box

:root
  --bg hsl(0, 0%, 90%)

body
  width 100vw
  background var(--bg)
  height 350vh
  overflow-x hidden

.gun
  height 30vmin
  &__wrapper
    display none
    height 30vmin
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%)

label
  height 44px
  width 44px
  position fixed
  bottom 1rem
  right 1rem
  cursor pointer

  & > svg
    position absolute
    height 100%
    width 100%
    top 0
    left 0

  path
    fill hsl(0, 0%, 5%)

  svg:nth-of-type(1)
    display none

[type='checkbox']
  // opacity 0
  position fixed
  left 150%
  height 0
  width 0

:checked ~ label
  svg:nth-of-type(1)
    display block
  svg:nth-of-type(2)
    display none