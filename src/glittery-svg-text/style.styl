*
  box-sizing:border-box;
  text-rendering:optimizeLegibility;
  -webkit-font-smoothing:antialiased;

body
  background #1d1f20

#app
  display flex
  place-items center
  min-height 100vh

.shimmer-text
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 100vmin

  svg
    position absolute
    width 100%
    height auto
    border '2px solid hsla(0, 100%, 50%, %s)' % (var(--debug, 0))
    transform translate(0, -50%)

  text
    font-family var(--font-family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif)
    font-weight bold
    font-size calc(var(--font-size, 4) * 1rem)
    text-transform uppercase

  circle
    fill 'hsl(%s, 100%, %s)' % (var(--hue, 235) calc(var(--lightness, 50) * 1%))

  &__text
    fill url(#shimmer-text__pattern)