- const PEOPLE = ['Lola', 'Ada', 'Sarah', 'Tess', 'Molly', 'Jessy', 'Zoey', 'Noah', 'Will', 'John', 'Jack', 'Levi', 'Isaac', 'Eli', 'Chris'].sort(() => Math.random() > 0.5 ? 1 : -1)
- const ROWS = 3
- const COLUMNS = 5

mixin cardFront(NAME)
  .card__picture
    - if (NAME === 'Lola')
      include ./a person/bust--trimmed--lola.svg
    - if (NAME === 'Ada')
      include ./a person/bust--trimmed--ada.svg
    - if (NAME === 'Sarah')
      include ./a person/bust--trimmed--sarah.svg
    - if (NAME === 'Tess')
      include ./a person/bust--trimmed--tess.svg
    - if (NAME === 'Molly')
      include ./a person/bust--trimmed--molly.svg
    - if (NAME === 'Jessy')
      include ./a person/bust--trimmed--jessy.svg
    - if (NAME === 'Zoey')
      include ./a person/bust--trimmed--zoey.svg
    - if (NAME === 'Noah')
      include ./a person/bust--trimmed--noah.svg
    - if (NAME === 'Will')
      include ./a person/bust--trimmed--will.svg
    - if (NAME === 'Jack')
      include ./a person/bust--trimmed--jack.svg
    - if (NAME === 'John')
      include ./a person/bust--trimmed--john.svg
    - if (NAME === 'Levi')
      include ./a person/bust--trimmed--levi.svg
    - if (NAME === 'Isaac')
      include ./a person/bust--trimmed--isaac.svg
    - if (NAME === 'Eli')
      include ./a person/bust--trimmed--eli.svg
    - if (NAME === 'Chris')
      include ./a person/bust--trimmed--chris.svg
  .card__name= NAME

mixin person(NAME)
  input.card-flipper(type='checkbox', id=NAME)
  .card__slot
    label.card(for=NAME, title=`Flip ${NAME}`)
      .card__back
        svg(role='img' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24')
