*
  box-sizing border-box

body
  background-color #111
  height 100vh
  width 100vw
  margin 0
  padding 0

.loader
  background-color white
  position absolute
  top 50%
  left 50%

  div
    height 10px
    width  10px
    border-radius 100%
    position absolute
    margin-left -5px
    margin-top -5px

    &:after
      border-radius 100%
      content ''
      height 100%
      width 100%
      background-color white
      display block
      box-shadow 0px 0px 5px white

    $radius = 18px
    for $dot in (1..6)
      $angle = $dot * 60deg
      &:nth-of-type({$dot})
        transform rotate($angle) translateY($radius)

    &:nth-of-type(even)
      &:after
        animation pulse .6s infinite

    &:nth-of-type(odd)
      &:after
        animation pulse .6s .3s infinite

@keyframes pulse
  0%, 100%
    transform scale(0.75)
  50%
    transform scale(1.1)