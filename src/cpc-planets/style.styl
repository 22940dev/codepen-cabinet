*
  box-sizing border-box

body
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight 300
  display flex
  flex-direction column
  align-items center
  justify-content center

.block-reveal
  --padding 5
  --font-size 32

  &__line
    height calc((var(--font-size) + var(--padding) + var(--padding)) * 1px)
    line-height calc(var(--font-size) * 1px)
    position relative

  h1
    padding calc(var(--padding) * 1px)
    margin 0
    font-size calc(var(--font-size) * 1px)
    line-height calc(var(--font-size) * 1px)
    opacity 0
    position absolute
    top 0
    left 0

  span
    position absolute
    background var(--bg, black)
    top 0
    bottom 0
    left 0
    transform-origin left
    transform scaleX(0)

// THEMING
.block-reveal__line:nth-of-type(1)
  --bg rebeccapurple
.block-reveal__line:nth-of-type(2)
  --bg #8B91A1
.block-reveal__line:nth-of-type(3)
  --bg #8CB1DE
.block-reveal__line:nth-of-type(4)
  --bg #E27B58
.block-reveal__line:nth-of-type(5)
  --bg #D39C7E
.block-reveal__line:nth-of-type(6)
  --bg #A49B72
.block-reveal__line:nth-of-type(7)
  --bg #BBE1E4
.block-reveal__line:nth-of-type(8)
  --bg #3E66F9
.block-reveal__line:nth-of-type(9)
  --bg #F6DDBD

