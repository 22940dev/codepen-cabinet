*
  box-sizing border-box
  animation  fadeIn .5s

body
  background-color #111
  border           4px solid blue
  text-align       center

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

$size = 50px

.loadman
  height $size
  width  $size
  position absolute
  top      50%
  left     50%
  margin-left -($size / 2)
  margin-top  -($size / 2)
  transform rotate(45deg)

  &:before
  &:after
    border ($size/2) solid yellow
    position absolute
    left 0
    content ''
    border-radius 100%

  &:before
    top 0
    border-right-color transparent
    border-bottom-color transparent
    animation chomp .25s infinite linear
  &:after
    bottom 0
    border-left-color transparent
    border-top-color  transparent
    border-right-color yellow
    border-bottom-color yellow
    animation chomp-b .25s infinite linear

$chomp-angle = 45

@keyframes chomp
  0%
    transform rotate(0deg)
  50%
    transform rotate($chomp-angle * -1deg)
  100%
    transform rotate(0deg)

@keyframes chomp-b
  0%
    transform rotate(0deg)
  50%
    transform rotate($chomp-angle * 1deg)
  100%
    transform rotate(0deg)


.track
  height 10px
  position absolute
  top 50%
  left 50%
  width 200px
  margin-top -5px
  background repeating-linear-gradient(90deg, white, white 5%, transparent 5%, transparent 35%)
  animation travel 2s infinite linear

@keyframes travel
  from
    background-position 0 0
  to
    background-position -200px 0
