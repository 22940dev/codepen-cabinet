  place-items center
  min-height 100vh

.splatted
  --stance var(--standing)
  --splodge var(--foundation)
  height 300px
  width 300px
  background var(--stance)
  background-size contain
  background-color hsl(280, 60%, 60%)
  transition clip-path 0.2s
  clip-path var(--splodge)

  &:hover
    --stance var(--noticing)
    --splodge var(--warmer)
  &:active
    --stance var(--falling)
    --splodge var(--splatted)
    background-position 50% 25%
    background-repeat no-repeat
    background-size 120% 120%


