*
  box-sizing border-box

body
  background-color hsl(155, 100%, 40%)
  min-height 100vh

img
  opacity 0.95
  height 100%
  width 100%
  display none

.circle
  background-color hsl(155, 100%, 35%)
  border-radius 50%
  height calc(var(--size, 5) * 1vmin)
  width calc(var(--size, 5) * 1vmin)
  left calc(var(--x) * 1%)
  top calc(var(--y) * 1%)
  position absolute

.tom
  height 25vmin
  position fixed
  width 25vmin
  z-index 2
  top 50%
  left 50%
  transform translate(-50%, -50%)


  &__head
    height 88%
    width 100%
    position absolute
    bottom 0

  &__ear
    --ear-hue 45
    background linear-gradient(hsl(30, 100%, 15%), transparent), radial-gradient(circle at center, hsl(30, 80%, 50%) 0 60%, hsl(30, 80%, 30%) 80%)
    height 28%
    width 34%
    filter blur(1px)
    position absolute
    top 0
    &--left
      border-radius 55% 45% 40% 50% / 50% 50% 50% 40%
      left 0
      transform translate(10%, -40%) rotate(-35deg)

    &--right
      border-radius 55% 45% 40% 50% / 50% 50% 35% 50%
      right 0
      transform translate(-10%, -40%) rotate(35deg)
      animation ear-right 5s infinite

  &__ear-inner
    position absolute
    height 60%
    width 65%
    filter drop-shadow( 0 0 10px hsl(30, 100%, 15%)) blur(2px)
    background radial-gradient(transparent 0 40%, hsl(350, 50%, 50%)), hsl(350, 80%, 80%)
    top 50%
    left 50%
    transform translate(-50%, -40%)
    border-radius 50% 50% 50% 50% / 50% 50% 50% 50%

  &__face
    border-radius 45% 45% 50% 50% / 60% 60% 36% 36%
    height 100%
    position absolute
    width 100%
    filter blur(1px)
    background radial-gradient(transparent 0 60%, hsl(30, 70%, 90%)), linear-gradient(45deg, hsla(30, 70%, 25%, 0.25) 0 15%, transparent 50%), hsl(30, 70%, 50%)

  &__mask
    background hsl(30, 100%, 15%)
    height 60%
    position absolute
    width 84%
    left 50%
    top 50%
    transform translate(-50%, -62%)
    filter blur(4px)
    border-radius 50% 50% 10% 10% / 60% 60% 30% 30%

    &:after
    &:before
      content ''
      position absolute
      background hsl(30, 100%, 15%)
      height 50%
      width 33%
      top 50%
      border-radius 0 0 50% 50% / 0 0 60% 60%

    &:before
      left 0
      transform translate(0, 7%)

    &:after
      right 0
      transform translate(0, 7%)

  &__snout
    height 40%
    width 50%
    background radial-gradient(circle at 50% 30%, transparent 0 5%, hsla(0, 0%, 95%, 0.15) 5%, transparent 25%), radial-gradient(circle at 50% 60%, hsl(30, 80%, 15%), transparent 50%), radial-gradient(circle at 50% 30%, hsl(30, 80%, 5%) 0 5%, transparent 8%), radial-gradient(circle at 50% 42%, hsl(30, 80%, 15%) 0 20%, transparent 22%), radial-gradient(circle at 50% 40%, white 0 16%, transparent 22%), radial-gradient(circle at 50% 50%, hsl(30, 80%, 15%) 0 20%, transparent 40% ), radial-gradient(hsl(30, 70%, 50%) 0 60%, transparent 70%)
    filter blur(4px)
    position absolute
    // opacity 0.75
    top 50%
    left 50%
    transform translate(-50%, 20%)

  &__eye
    position absolute
    height 32%
    width 18%
    background hsl(0, 0%, 95%)
    top 50%
    left 50%
    overflow hidden

    &--left
      border-radius 50% 45% 50% 45% / 50% 45% 50% 45%
      transform translate(-184%, -58%)
    &--right
      border-radius 50% 45% 50% 45% / 50% 45% 50% 45%
      transform translate(87%, -58%) rotate(-5deg)

  &__pupil
    height 75%
    width 60%
    border-radius 50% 50% 50% 50% / 50% 50% 50% 50%
    background hsl(215, 90%, 50%)
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

  &__eyelid
    position absolute
    height 110%
    width 150%
    top 50%
    filter blur(2px)
    left 50%
    background linear-gradient(hsl(30, 80%, 50%) 0 75%, hsl(30, 80%, 30%)), hsl(30, 80%, 50%)
    border-bottom 1px solid hsl(30, 100%, 15%)
    &--left
      transform translate(-50%, -110%) skewY(-30deg)
      animation blink-left 8s infinite
    &--right
      height 120%
      transform translate(-50%, -108%) skewY(35deg)
      animation blink-right 8s infinite

@keyframes blink-left
  0%, 49%, 51%, 100%
    transform translate(-50%, -110%) skewY(-30deg)
  50%
    transform translate(-50%, -50%) skewY(-30deg)
@keyframes blink-right
  0%, 49%, 51%, 100%
    transform translate(-50%, -108%) skewY(35deg)
  50%
    transform translate(-50%, -50%) skewY(35deg)