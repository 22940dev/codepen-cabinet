@import url('https://fonts.googleapis.com/css?family=Passion+One')

*
  box-sizing border-box

body
  --unit 5
  align-items center
  background-color #111
  display flex
  font-family 'Passion One', cursive
  justify-content center
  min-height 100vh

  @media(min-width 768px)
    --unit 10

.badge
  --size 150
  height calc(var(--size) * 1px)
  position relative
  width calc(var(--size) * 1px)

  @media(min-width 768px)
    --size 300

  &__circle
    background red
    border 10px solid black
    border-radius 100%
    box-shadow 0 0 0 10px yellow
    height 100%
    left 50%
    overflow hidden
    position absolute
    top 50%
    transform translate(-50%, -50%)
    width 100%
    z-index 2

  &__text
    --font-size calc(var(--size) * .25px)
    background black
    color #fff
    font-size var(--font-size)
    left 50%
    letter-spacing calc(var(--font-size) * .25px)
    line-height var(--font-size)
    padding 0 .5rem
    position absolute
    text-transform uppercase
    top 55%
    transform translate(-50%, 0)
    white-space nowrap
    z-index 3

    &--empty
      box-shadow 0 0 0 10px yellow
      color transparent
      z-index 1

